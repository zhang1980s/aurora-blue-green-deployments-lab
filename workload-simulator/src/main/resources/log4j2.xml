<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="log.timestamp">${date:yyyy-MM-dd-HHmmss}</Property>
    </Properties>
    <Appenders>
        <!-- Console Appender with colored output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{%-5level} [%t] %c{1} - %msg%n">
                <DisableAnsi>false</DisableAnsi>
            </PatternLayout>
        </Console>

        <!-- File Appender for persistent logging -->
        <RollingFile name="RollingFile" fileName="logs/workload-simulator-${log.timestamp}.log"
                     filePattern="logs/workload-simulator-${log.timestamp}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Application logger with dynamic level control -->
        <Logger name="com.aws.aurora" level="${sys:LOG_LEVEL:-info}" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <!-- Operations logger - file only (for dashboard/event_driven formats) -->
        <Logger name="com.aws.aurora.operations" level="${sys:LOG_LEVEL:-info}" additivity="false">
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <!-- HikariCP connection pool logger -->
        <Logger name="com.zaxxer.hikari" level="${sys:hikari.log.level:-${sys:LOG_LEVEL:-info}}" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <!-- AWS JDBC Wrapper logger (via JUL bridge) with dynamic level control -->
        <Logger name="software.amazon.jdbc" level="${sys:jdbc.log.level:-info}" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <!-- Blue-Green plugin specific (most detailed) -->
        <Logger name="software.amazon.jdbc.plugin.bluegreen" level="${sys:jdbc.bluegreen.log.level:-${sys:jdbc.log.level:-info}}" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <!-- Failover plugin specific -->
        <Logger name="software.amazon.jdbc.plugin.failover2" level="${sys:jdbc.failover.log.level:-${sys:jdbc.log.level:-info}}" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <!-- Enhanced Failure Monitoring plugin -->
        <Logger name="software.amazon.jdbc.plugin.efm2" level="${sys:jdbc.efm.log.level:-${sys:jdbc.log.level:-info}}" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <!-- Root logger with dynamic level control -->
        <Root level="${sys:LOG_LEVEL:-info}">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>
